<%- include ('includes/header.ejs'); %>
		<div class="main_div">
			<div class="container-fluid">
				<div class="row">
					<div class="col-sm-8 posts_div">
						<% postData.forEach(function(data, index) { %>
						<div class="post_box">
							<div class="post_div_content post_image">
								<img class="img_post" src="/images/<%= data.post_image %>">
							</div>
							<div class="post_div_content post_text">
								<h3><%= data.post_title %></h3>
								<p><%= data.author_firstname + data.author_lastname %></p>
								<p><%= data.post_intro %></p>
								<a href="#">Read More</a>
							</div>
							<div style="clear:both"></div>
				 		</div><br>
						<% }); %>
					</div>
					<div class="col-sm-3 quotes_div"> <h3>Quotes of the Day!</h3><div id="inner_quote"><p>The best way to become a writer is to first become a reader</p></div></div>

				</div>
			</div>
			<div class ="main_2">
				<div class="same_author_posts">
					<h2> Post by the same Author</h2>
				</div>
				<div class="recent_posts">
					<h2>Recent Posts</h2>
				</div>
			</div>
		</div>
		<footer>
			<%- include (
'includes/footer.ejs'); %>
		</footer>

	</body>
</html>
