<%- include ('includes/header.ejs'); %>
<div id="main_div">
	<form action="/register_user" method="POST" name="user_form" id="user_form" enctype="multipart/form-data">
		<p>Already have an account? please click <a href="/login">Sign in</a> to login into your dashboard</p>
		<h3> Please fill out this form</h3>
		<label>Enter your last name</label><br><input type="text" name="user_lastname" id="user_lastname>"></input><br><br>
		<label>Enter your first name</label><br><input type="text" name="user_firstname" id="user_firstname>"></input><br><br>
		<label>Enter your email</label><br><input type="email" name="user_email" id="user_email"></input><br><br>
		<label>Create a password</label><br><input type="password" id="password" name="password"></input><br><br>
		<label>Select your category(one for now)</label><br><select id="user_category" name="user_category"><br>
			<option>--Select--</option>
			<option value="tech">Tech</option>
			<option value="lifestyle">Lifestyle</option>
			<option value="relationship">Relationship</option>
		</select><br><br>
		<label>Short bio about yourself</label><br><textarea id="user_bio" name="user_bio"></textarea><br><br>
		<label>Upload a photo of yourself</label><br><input type="file" name="bio_image" id="bio_image"></input><br><br>
		<input type="submit" name="submit" text="Submit"></input>
	</form>
</div><br>
<script>
	$(document).ready(function() {
		$("#user-form").validate();
	});
</script>
<footer>
	<%- include ('includes/footer.ejs'); %>
</footer>
</body>
</html>
